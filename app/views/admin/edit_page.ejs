<%- include('../_layouts/adminheader') %>
  <h2 class="page-title">Add Page</h2>
  <a href="/admin/pages">All pages</a>
  <br><br>

  <form method="post" action="/admin/pages/edit-page/<%= slug %>">
    <input type="hidden" name="_id" type="hidden" value="<%= _id %>">
    <div class="form-group">
      <label for="">Title</label>
      <input class="form-control" type="text" name="title" value="<%= title %>" placeholder="Title">
    </div>
    <div class="form-group">
      <label for="">Slug</label>
      <input class="form-control" type="text" name="slug" value="<%= slug %>" placeholder="Slug">
    </div>
    <div class="form-group">
      <label for="">Content</label>
      <textarea id="ta" class="form-control" type="text" name="content" placeholder="Content"><%= content %></textarea>
    </div>
    <button class="btn btn-primary">Submit</button>
  </form>

<%- include('../_layouts/adminfooter') %>